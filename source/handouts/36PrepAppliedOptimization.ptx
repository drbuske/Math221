\fill [color=red] (0.7,0) circle (2pt) node [below] at (0.7,-0.25) {$ \frac{\sqrt{2}}{2}$};
\fill [color=red] (1,0) circle (2pt) node [below] at (1,-0.25) {$1$};
\draw [color=red] node [above] at (0.33,0.25) {$+$};
